[project]
name = "{{ cookiecutter.project_slug }}"
version = "{{ cookiecutter.version }}"
description = "{{ cookiecutter.project_description }}"
readme = "README.md"
requires-python = ">={{ cookiecutter.python_version }},<3.15"
authors = [
    {name = "{{ cookiecutter.author_name }}", email = "{{ cookiecutter.author_email }}"}
]

dependencies = [
    "fastapi==0.116.1",
    "flet[all]==0.28.3",
    "uvicorn==0.35.0",
    "structlog==25.4.0",
    "pydantic-settings>=2.12.0",
    "typer==0.16.0",
    # Pin click to avoid yanked versions (typer dependency)
    "click==8.2.1",
    # Rich CLI formatting
    "rich==14.1.0",
    # HTTP client for CLI API calls
    "httpx==0.28.1",
    # System monitoring
    "psutil==7.0.0",
{%- if cookiecutter.include_scheduler == "yes" %}
    "apscheduler==3.10.4",
{%- endif %}
{%- if cookiecutter.include_redis == "yes" %}
    "redis==5.0.8",
{%- endif %}
{%- if cookiecutter.include_worker == "yes" %}
{%- if cookiecutter.worker_backend == "taskiq" %}
    "taskiq>=0.11.11",
    "taskiq-redis>=1.0.2",
{%- else %}
    "arq==0.25.0",
{%- endif %}
{%- endif %}
{%- if cookiecutter.include_database == "yes" %}
    "sqlmodel>=0.0.14",
    "sqlalchemy>=2.0.0",
    "aiosqlite>=0.19.0",
    "greenlet>=1.1.0",
{%- endif %}
{%- if cookiecutter.include_cache == "yes" %}
    "redis[hiredis]==5.0.8",
{%- endif %}
{%- if cookiecutter.include_auth == "yes" %}
    "python-jose[cryptography]==3.3.0",
    "passlib[bcrypt]==1.7.4",
    "bcrypt<5.0.0",  # Pin to 4.x due to passlib compatibility
    "python-multipart==0.0.9",
    "alembic==1.16.5",
{%- endif %}
{%- if cookiecutter.include_ai == "yes" %}
{%- if cookiecutter.ai_framework == "pydantic-ai" %}
{# Map provider names to pydantic-ai-slim extras (OpenAI-compatible providers -> openai) #}
{%- set pydantic_extras = cookiecutter.ai_providers | replace("public", "openai") | replace("openrouter", "openai") %}
    "pydantic-ai-slim[{{ pydantic_extras }}]>=1.0.10",
    "httpx>=0.27.0",
{%- else %}
    # LangChain framework dependencies
    "langchain-core>=1.1.0",
{%- if "openai" in cookiecutter.ai_providers or "public" in cookiecutter.ai_providers %}
    "langchain-openai>=1.1.0",
{%- endif %}
{%- if "anthropic" in cookiecutter.ai_providers %}
    "langchain-anthropic>=1.2.0",
{%- endif %}
{%- if "google" in cookiecutter.ai_providers %}
    "langchain-google-genai>=4.0.0",
{%- endif %}
{%- if "groq" in cookiecutter.ai_providers %}
    "langchain-groq>=1.1.0",
{%- endif %}
{%- if "mistral" in cookiecutter.ai_providers %}
    "langchain-mistralai>=1.1.0",
{%- endif %}
{%- if "cohere" in cookiecutter.ai_providers %}
    "langchain-cohere>=0.5.0",
{%- endif %}
{%- endif %}
    "marko==2.1.3",
{%- endif %}
{%- if cookiecutter.include_comms == "yes" %}
    "resend>=2.4.0",
    "twilio>=9.3.7",
{%- endif %}
{%- if cookiecutter.include_auth == "yes" or cookiecutter.include_comms == "yes" %}
    "email-validator==2.2.0",  # Required for EmailStr in auth/comms models
{%- endif %}
]

[project.scripts]
{{cookiecutter.project_slug}} = "app.cli.main:main"

[project.optional-dependencies]
dev = [
    "pytest==8.4.1",
    "pytest-asyncio==1.1.0",
    "ruff==0.12.7",
    "ty",
    "types-psutil==7.0.0.20250801",
    "pre-commit==4.2.0",
    "pip-audit==2.9.0",
{%- if cookiecutter.include_worker == "yes" %}
    # Development auto-reload for workers
    "watchdog==4.0.2",
{%- endif %}
]
docs = [
    "mkdocs==1.6.1",
    "mkdocs-material==9.6.16",
    "mkdocstrings[python]==0.30.0",
    "mkdocs-gen-files==0.5.0",
    "pymdown-extensions==10.16.1",
]

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.wheel]
packages = ["app"]

[tool.ruff]
line-length = 88
target-version = "py{{ cookiecutter.python_version.replace('.', '') }}"

[tool.ruff.lint]
select = ["E", "F", "I", "N", "W", "UP"]  # Added UP for pyupgrade (modern Python syntax)
ignore = []
fixable = ["ALL"]
unfixable = []

[tool.ruff.format]
quote-style = "double"
indent-style = "space"
skip-magic-trailing-comma = false
line-ending = "auto"

[tool.ruff.lint.isort]
force-single-line = false
force-sort-within-sections = true
known-first-party = ["app"]

[tool.ty.rules]
# Configure ty to ignore only genuine false positives or unavoidable issues
# Real type issues should be fixed, not ignored
unresolved-import = "ignore"              # Missing third-party type stubs (unavoidable)
unresolved-attribute = "ignore"           # Some dynamic attribute access in Flet is unavoidable
invalid-argument-type = "ignore"          # Flet dynamic attributes and colors
non-subscriptable = "ignore"             # Flet page.controls access patterns
unsupported-operator = "ignore"          # Flet value comparisons with None
possibly-unbound-attribute = "ignore"    # Flet dynamic component properties
call-non-callable = "ignore"             # Dynamic middleware registration patterns
invalid-return-type = "ignore"           # Flet component return type flexibility


[tool.pytest.ini_options]
asyncio_mode = "auto"
testpaths = ["tests"]

[dependency-groups]
dev = [
    "httpx>=0.28.1",
]