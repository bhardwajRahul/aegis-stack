
x-app: &app
  image: ${AEGIS_STACK_TAG:-aegis-stack:latest}
  build:
    context: .
    args:
      - AEGIS_STACK_VERSION=${AEGIS_STACK_VERSION:-dev}
      - PORT=${PORT:-8000}
  env_file:
    - ${AEGIS_STACK_ENV_FILE:-.env}
  environment:
    # Docker container marker for entrypoint script
    - DOCKER_CONTAINER=1
    - PORT=${PORT:-8000}
  labels:
    logging: "aegis-stack"

services:
  # DEVELOPMENT PROFILE

  webserver:
    <<: *app
    command:
      - webserver
{%- if include_redis or database_engine == "postgres" or ollama_mode == "docker" %}
    depends_on:
{%- if include_redis %}
      redis:
        condition: service_healthy
{%- endif %}
{%- if database_engine == "postgres" %}
      postgres:
        condition: service_healthy
{%- endif %}
{%- if ollama_mode == "docker" %}
      ollama:
        condition: service_healthy
{%- endif %}
{%- endif %}
{%- if include_redis %}
    environment:
      # Docker container marker and Redis connection for health checks
      - DOCKER_CONTAINER=1
      - REDIS_URL=${REDIS_URL:-redis://redis:6379}
{%- endif %}
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:${PORT:-8000}/health/"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 512M
          cpus: '0.5'
        reservations:
          memory: 256M
          cpus: '0.25'
{%- if include_ingress %}
    labels:
      - "traefik.enable=true"
{%- if not ingress_tls %}
      # Public router
      - "traefik.http.routers.webserver.rule=PathPrefix(`/`)"
      - "traefik.http.routers.webserver.entrypoints=web"
{%- endif %}
      - "traefik.http.services.webserver.loadbalancer.server.port=${PORT:-8000}"
{%- if not ingress_tls %}
      # Admin paths - IP restricted (set ADMIN_IP_ALLOWLIST in .env)
      - "traefik.http.routers.webserver-admin.rule=PathPrefix(`/dashboard`) || PathPrefix(`/docs`) || PathPrefix(`/redoc`) || PathPrefix(`/openapi.json`)"
      - "traefik.http.routers.webserver-admin.entrypoints=web"
      - "traefik.http.routers.webserver-admin.service=webserver"
      - "traefik.http.routers.webserver-admin.middlewares=admin-ipallowlist"
      - "traefik.http.middlewares.admin-ipallowlist.ipallowlist.sourcerange=${ADMIN_IP_ALLOWLIST:-0.0.0.0/0}"
{%- endif %}
{%- endif %}
    profiles:
      - dev
      - prod


{%- if include_scheduler %}
  # Scheduler service (runs scheduler tasks independently)
  scheduler:
    <<: *app
    command:
      - scheduler
{%- if include_redis or scheduler_backend == 'postgres' or database_engine == 'postgres' %}
    depends_on:
{%- if include_redis %}
      redis:
        condition: service_healthy
{%- endif %}
{%- if scheduler_backend == 'postgres' or database_engine == 'postgres' %}
      webserver:
        condition: service_healthy
{%- endif %}
{%- endif %}
    environment:
      # Docker container marker
      - DOCKER_CONTAINER=1
{%- if include_redis %}
      - REDIS_URL=${REDIS_URL:-redis://redis:6379}
{%- endif %}
      - SCHEDULER_FORCE_UPDATE=${SCHEDULER_FORCE_UPDATE:-false}
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 256M
          cpus: '0.25'
        reservations:
          memory: 128M
          cpus: '0.1'
    profiles:
      - dev
      - prod
{%- endif %}

{%- if include_worker %}
  # Load Test Worker (high-performance load testing tasks)
  worker-load-test:
    <<: *app
    command:
      - worker
      - load_test
    depends_on:
      redis:
        condition: service_healthy
    restart: unless-stopped
    tty: true
    environment:
      # Docker container marker for entrypoint script
      - DOCKER_CONTAINER=1
      # Load test worker configuration
      - WORKER_QUEUE_TYPE=load_test
{%- if worker_backend == "taskiq" %}
      - WORKER_PROCESSES=${LOAD_TEST_WORKER_PROCESSES:-4}
{%- endif %}
      - WORKER_TIMEOUT_SECONDS=${LOAD_TEST_WORKER_TIMEOUT:-60}
      - WORKER_MAX_TRIES=${LOAD_TEST_WORKER_MAX_TRIES:-1}
      - REDIS_URL=${REDIS_URL:-redis://redis:6379}
{%- if worker_backend == "taskiq" %}
      # Docker file watching fix - force polling for volume mounts
      - WATCHFILES_FORCE_POLLING=true
      - WATCHFILES_POLL_DELAY_MS=800
{%- endif %}
    deploy:
      resources:
        limits:
          memory: 1G
          cpus: '1.0'
        reservations:
          memory: 512M
          cpus: '0.5'
    profiles:
      - dev
      - prod


  # System Worker (maintenance and administrative tasks)
  worker-system:
    <<: *app
    command:
      - worker
      - system
    depends_on:
      redis:
        condition: service_healthy
    restart: unless-stopped
    tty: true
    environment:
      # Docker container marker for entrypoint script
      - DOCKER_CONTAINER=1
      # System worker configuration (high reliability)
      - WORKER_QUEUE_TYPE=system
{%- if worker_backend == "taskiq" %}
      - WORKER_PROCESSES=${SYSTEM_WORKER_PROCESSES:-2}
{%- endif %}
      - WORKER_TIMEOUT_SECONDS=${SYSTEM_WORKER_TIMEOUT:-1800}
      - WORKER_MAX_TRIES=${SYSTEM_WORKER_MAX_TRIES:-5}
      - REDIS_URL=${REDIS_URL:-redis://redis:6379}
{%- if worker_backend == "taskiq" %}
      # Docker file watching fix - force polling for volume mounts
      - WATCHFILES_FORCE_POLLING=true
      - WATCHFILES_POLL_DELAY_MS=800
{%- endif %}
    deploy:
      resources:
        limits:
          memory: 256M
          cpus: '0.25'
        reservations:
          memory: 128M
          cpus: '0.1'
    profiles:
      - dev
      - prod
{%- endif %}


{%- if include_redis %}
  # REDIS SERVICE

  redis:
    image: redis:7-alpine
    hostname: redis
    command: redis-server --maxmemory 256mb --maxmemory-policy allkeys-lru
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 10s
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 512M
          cpus: '0.25'
        reservations:
          memory: 256M
          cpus: '0.1'
    profiles:
      - dev
      - prod
{%- endif %}

{%- if database_engine == "postgres" %}
  # POSTGRESQL SERVICE

  postgres:
    image: postgres:16-alpine
    hostname: postgres
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: {{ project_slug }}
    volumes:
      - postgres-data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 10s
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 512M
          cpus: '0.5'
        reservations:
          memory: 256M
          cpus: '0.25'
    profiles:
      - dev
      - prod
{%- endif %}

{%- if ollama_mode == "docker" %}
  # OLLAMA SERVICE (Local LLM Inference)

  ollama:
    image: ollama/ollama:latest
    hostname: ollama
    volumes:
      - ollama-data:/root/.ollama
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:11434/api/tags"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 8G
          cpus: '4.0'
        reservations:
          memory: 4G
          cpus: '2.0'
    profiles:
      - dev
      - prod
{%- endif %}

{%- if include_ingress %}
  # TRAEFIK REVERSE PROXY

  traefik:
    image: traefik:v3.6
    hostname: traefik
    environment:
      - DOCKER_API_VERSION=1.44
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - ./traefik/traefik.yml:/etc/traefik/traefik.yml:ro
{%- if ingress_tls %}
      - traefik-letsencrypt:/letsencrypt
{%- endif %}
    healthcheck:
      test: ["CMD", "traefik", "healthcheck", "--ping"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 10s
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 256M
          cpus: '0.25'
        reservations:
          memory: 128M
          cpus: '0.1'
    profiles:
      - dev
      - prod
{%- endif %}

  # TEST PROFILE

  test_runner:
    <<: *app
    command:
      - test
    env_file:
      - ${AEGIS_STACK_ENV_FILE:-.env}
    profiles:
      - test

volumes:
  aegis-data:
{%- if database_engine == "postgres" %}
  postgres-data:
{%- endif %}
{%- if ollama_mode == "docker" %}
  ollama-data:
{%- endif %}
{%- if include_ingress and ingress_tls %}
  traefik-letsencrypt:
{%- endif %}
