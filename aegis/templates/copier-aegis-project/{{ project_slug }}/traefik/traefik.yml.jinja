# Traefik Static Configuration
# Generated by Aegis Stack

api:
  dashboard: true
  insecure: true  # Dashboard accessible without auth (dev mode)

ping:
  entryPoint: traefik

entryPoints:
  web:
    address: ":80"
{%- if ingress_tls %}
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
  websecure:
    address: ":443"
{%- endif %}
  traefik:
    address: ":8080"

providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
    network: {{ project_slug }}_default

{%- if ingress_tls %}

certificatesResolvers:
  letsencrypt:
    acme:
      email: {{ author_email }}
      storage: /letsencrypt/acme.json
      httpChallenge:
        entryPoint: web
{%- endif %}

log:
  level: INFO

accessLog: {}
