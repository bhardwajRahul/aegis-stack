{%- if include_ingress -%}
# Deployment Configuration for {{ project_name }}
# Copy this to .env.deploy and fill in your production values
#
# IMPORTANT: Never commit .env.deploy to version control!

#=============================================================================
# SERVER CONNECTION (used by Makefile deploy commands)
#=============================================================================

# Your server's IP address or hostname
DEPLOY_HOST=your-server-ip

# SSH user (usually root for initial setup, then a deploy user)
DEPLOY_USER=root

# Path on server where app will be deployed
DEPLOY_PATH=/opt/{{ project_slug }}

# Docker context name (used for remote Docker commands)
DOCKER_CONTEXT={{ project_slug }}-remote

#=============================================================================
# APPLICATION SETTINGS (copied to server as .env)
#=============================================================================

# Environment
ENVIRONMENT=production

# Security - CHANGE THESE!
SECRET_KEY=your-super-secret-key-change-this-in-production

{% if include_database -%}
# Database
{% if database_engine == "postgres" -%}
DATABASE_URL=postgresql://{{ project_slug }}:your-secure-db-password@postgres:5432/{{ project_slug }}
POSTGRES_USER={{ project_slug }}
POSTGRES_PASSWORD=your-secure-db-password
POSTGRES_DB={{ project_slug }}
{% else -%}
DATABASE_URL=sqlite:///data/{{ project_slug }}.db
{% endif -%}

{% endif -%}
{% if include_cache -%}
# Redis
REDIS_URL=redis://redis:6379

{% endif -%}
#=============================================================================
# TRAEFIK / INGRESS
#=============================================================================

# Your domain (required for TLS)
DOMAIN=example.com

# Let's Encrypt email for TLS certificates
ACME_EMAIL=admin@example.com

# Enable TLS (set to true in production)
TRAEFIK_TLS_ENABLED=true

#=============================================================================
# OPTIONAL: EXTERNAL SERVICES
#=============================================================================
{% if include_ai_service %}
# AI Service
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
{% endif %}
{% if include_auth_service %}
# Auth Service
# JWT_SECRET=your-jwt-secret
{% endif %}
{% endif %}
